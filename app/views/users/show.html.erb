<%= link_to 'Logout', '/logout' %>

<div class="row">
  <div id="welcome" class="small-4 columns">
    <h3>Welcome, <%= current_user.username %>!</h3>
  </div>

  <div class="small-8 columns">
  <% current_user.baskets.reverse.each do |i| %>
    <a class="individual_basket button small success" href="/users/<%= current_user.id %>/baskets/<%= i.id %>"><%= i.name %></a>
    <% end %>
  </div>

</div>

<div class="row">
  <div class="small-12 medium-6 large-6 columns">
    <h3>Fund Lookup</h3>
    <p>Type in a fund symbol here (FBIOX, FBTAX, RYSEX etc.)</p>
    <%= form_tag("/users/#{current_user.id}/funds", method: "post") do %>
      <%= text_field_tag "symbol", nil, :placeholder => "FBIOX" %>
      <%= submit_tag "Hatch!", class: "button postfix" %>
    <% end %>
  </div>


  <div id="funds" class="small-12 medium-6 large-6 columns">
    <h3>Your Baskets</h3>
    <p>Name a basket to hold similar funds</p>
    <%= form_tag("/users/#{current_user.id}/baskets", method: "post") do %>
      <%= text_field_tag "basket_name", nil, :placeholder => "Biotech" %>
      <%= submit_tag "Create Basket!", class: "button postfix" %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="small-12 columns">
    <span class="fund_summary" id="fund_summary"></span>
  </div>
</div>


